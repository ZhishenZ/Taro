{
  "name": "TaroDev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspaces/Taro",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "DavidAnson.vscode-markdownlint",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-toolsai.jupyter",
        "oderwat.indent-rainbow",
        "timonwong.shellcheck"
      ]
    }
  },
  // Mounts are now handled in docker-compose.yml
  "remoteUser": "root",
  "postCreateCommand": "cd /workspaces/Taro && pip install -e . && python -m alembic check || python -m alembic revision --autogenerate -m 'auto_migration' && python -m alembic upgrade head"
}
